{{> logo-lockup}}

<div class="container-fluid">

  <div class="row row-top-spacer text-center">
    <div class="col-xsp-12 col-xsp-offset-0 col-xs-10 col-xs-offset-1">
      <h1 class="bold-uppercase">CONTACT</h1>
    </div>
  </div>

	<div class="row text-center">
		<div class="col-xsp-10 col-xsp-offset-1 col-xs-6 col-xs-offset-3">
			{{#post}}{{content}}{{/post}}
		</div>
	</div>

  <div class="row row-top-spacer">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
      <form method="post" action="/contactmailer">
        <div class="form-group">
          <input type="text" required="required" class="form-control" id="exampleInputPassword1" placeholder="Name" name="name">
        </div>
        <div class="form-group">
          <input type="email" required="required" class="form-control" id="exampleInputEmail1" placeholder="Email" name="email">
        </div>
        <div class="form-group">
          <input type="text" required="required" class="form-control" id="exampleInputPassword1" placeholder="Subject" name="subject">
        </div>
        <div class="form-group">
          <textarea class="form-control" required="required" rows="8" cols="40" placeholder="Message" name="message"></textarea>
        </div>
        <button type="submit" class="btn btn-primary btn-block bold-uppercase">SUBMIT</button>
      </form>
    </div>
  </div>

</div>
