  <div class="carousel-inner">
    <div class="item active">
      <div class="img-bg {{header-class-0}}" style="background-image:url({{asset "images/headers/landing-header-1.jpg"}}); height:{{carousel-height}};" alt="..."></div>
      <div class="carousel-caption">
      </div>
    </div>
    <div class="item">
      <div class="img-bg {{header-class-1}}" style="background-image:url({{asset "images/headers/landing-header-2.jpg"}}); height:{{carousel-height}};" alt="..."></div>
      <div class="carousel-caption">
      </div>
    </div>
    <div class="item">
      <div class="img-bg {{header-class-2}}" style="background-image:url({{asset "images/headers/landing-header-3.jpg"}}); height:{{carousel-height}};" alt="..."></div>
      <div class="carousel-caption">
      </div>
    </div>
    <div class="item">
      <div class="img-bg {{header-class-3}}" style="background-image:url({{asset "images/headers/landing-header-4.jpg"}}); height:{{carousel-height}};" alt="..."></div>
      <div class="carousel-caption">
      </div>
    </div>
    <div class="item">
      <div class="img-bg {{header-class-4}}" style="background-image:url({{asset "images/headers/landing-header-5.jpg"}}); height:{{carousel-height}};" alt="..."></div>
      <div class="carousel-caption">
      </div>
    </div>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
